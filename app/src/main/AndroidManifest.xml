<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaemil.hgms" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.chaemil.hgms.utils.VolleyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.Oaza" >
        <activity
            android:name="com.chaemil.hgms.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chaemil.hgms.VideoPlayer"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>

        <!--
            <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        -->

        <activity
            android:name="com.chaemil.hgms.PhotoalbumActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_photoalbum" >
        </activity>
        <activity
            android:name="com.chaemil.hgms.ListDownloadedAudio"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_audio_player"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.chaemil.hgms.PhotoalbumSlideshow"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_photoalbum_slideshow"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.chaemil.hgms.AudioPlayer"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_audio_player" >
        </activity>
        <activity
            android:name="com.chaemil.hgms.LivePlayer"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor" >

            <!--
            <meta-data android:name="@string/minVersion" android:value="8"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
            -->
        </activity>
        <activity
            android:name="com.chaemil.hgms.DownloadManager"
            android:label="@string/title_activity_download_manager" >
        </activity>
    </application>

</manifest>
