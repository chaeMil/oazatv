<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/title_bg_2"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_margin="12dp">

            <at.markushi.ui.CircleButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cb_color="#2b579e"
                app:cb_pressedRingWidth="5dp"
                android:src="@drawable/ic_live_broadcast"
                android:id="@+id/liveBroadcastButton"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live_broadcast"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDy="0"
                android:shadowDx="0"
                android:shadowRadius="5"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/liveBroadcastText"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_margin="12dp">

                    <at.markushi.ui.CircleButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cb_color="#2b579e"
                        app:cb_pressedRingWidth="5dp"
                        android:src="@drawable/ic_file_download"
                        android:id="@+id/downloadedAudioButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/downloaded_audio"
                        android:textColor="@android:color/white"
                        android:shadowColor="@android:color/black"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="5"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/downloadedAudioText"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>