<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainScrollView"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/firstVideo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/newVideosTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/homeScreenTitles"
            android:text="@string/newVideos"/>

        <com.chaemil.hgms.view.ExpandedListView
            android:id="@+id/newVideos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:drawSelectorOnTop="true"
            android:fastScrollAlwaysVisible="false">
        </com.chaemil.hgms.view.ExpandedListView>

        <TextView
            android:id="@+id/photoalbumsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/homeScreenTitles"
            android:text="@string/photoalbums"/>

        <com.chaemil.hgms.view.ExpandedListView
            android:id="@+id/photoAlbums"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:drawSelectorOnTop="true"
            android:fastScrollAlwaysVisible="false">
        </com.chaemil.hgms.view.ExpandedListView>

    </LinearLayout>

</ScrollView>