<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/connectivityProblem"
    android:background="#870000"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/homeNetworkProblemTitle"
        android:text="@string/connection_problem_home_title"
        android:gravity="center_horizontal"
        android:clickable="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/homeNetworkProblemText"
        android:gravity="center_horizontal"
        android:id="@+id/homeNetworkProblemText"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <at.markushi.ui.CircleButton
            android:id="@+id/refresh"
            app:cb_pressedRingWidth="8dip"
            app:cb_color="#ff480000"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/ic_refresh"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/goToAudioPlayer"
            app:cb_pressedRingWidth="8dip"
            app:cb_color="#ff480000"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/ic_file_download_red"/>

    </LinearLayout>




</LinearLayout>